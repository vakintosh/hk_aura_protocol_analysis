<!-- Defines the WholeHomeAudio service for the Harman Kardon Aura speaker using the UPnP (Universal Plug and Play) protocol. It specifies the actions that can be performed on the WholeHomeAudio service, such as getting device status information, creating a party, leaving a party, and joining a party. Each action includes a list of arguments and their directions (input or output). The file also defines state variables that describe the current state of the WholeHomeAudio service, such as friendly name, device status, party ID, play state, and action status. This information is used by UPnP clients to manage and control the speaker's multi-room audio features -->

<?xml version="1.0"?>
<scpd
  xmlns="urn:schemas-upnp-org:service-1-0">
	<specVersion>
		<major>1</major>
		<minor>0</minor>
	</specVersion>
	<actionList>
		<action>
			<name>GetDeviceStatusInfo</name>
			<argumentList>
				<argument>
					<name>FriendlyName</name>
					<direction>out</direction>
					<relatedStateVariable>A_ARG_TYPE_FriendlyName</relatedStateVariable>
				</argument>
				<argument>
					<name>DeviceStatus</name>
					<direction>out</direction>
					<relatedStateVariable>A_ARG_TYPE_DeviceStatus</relatedStateVariable>
				</argument>
				<argument>
					<name>PartyId</name>
					<direction>out</direction>
					<relatedStateVariable>A_ARG_TYPE_PartyId</relatedStateVariable>
				</argument>
				<argument>
					<name>PlayState</name>
					<direction>out</direction>
					<relatedStateVariable>A_ARG_TYPE_PlayState</relatedStateVariable>
				</argument>
				<argument>
					<name>ActionStatus</name>
					<direction>out</direction>
					<relatedStateVariable>A_ARG_TYPE_ActionStatus</relatedStateVariable>
				</argument>
			</argumentList>
		</action>
		<action>
			<name>CreateParty</name>
			<argumentList>
				<argument>
					<name>PartyId</name>
					<direction>out</direction>
					<relatedStateVariable>A_ARG_TYPE_PartyId</relatedStateVariable>
				</argument>
				<argument>
					<name>ActionStatus</name>
					<direction>out</direction>
					<relatedStateVariable>A_ARG_TYPE_ActionStatus</relatedStateVariable>
				</argument>
			</argumentList>
		</action>
		<action>
			<name>LeaveParty</name>
			<argumentList>
				<argument>
					<name>ActionStatus</name>
					<direction>out</direction>
					<relatedStateVariable>A_ARG_TYPE_ActionStatus</relatedStateVariable>
				</argument>
			</argumentList>
		</action>
		<action>
			<name>JoinParty</name>
			<argumentList>
				<argument>
					<name>ActionStatus</name>
					<direction>out</direction>
					<relatedStateVariable>A_ARG_TYPE_ActionStatus</relatedStateVariable>
				</argument>
				<argument>
					<name>PartyId</name>
					<direction>in</direction>
					<relatedStateVariable>A_ARG_TYPE_PartyId</relatedStateVariable>
				</argument>
			</argumentList>
		</action>
	</actionList>
	<serviceStateTable>
		<stateVariable sendEvents="no">
			<name>A_ARG_TYPE_FriendlyName</name>
			<dataType>string</dataType>
		</stateVariable>
		<stateVariable sendEvents="no">
			<name>A_ARG_TYPE_DeviceStatus</name>
			<dataType>i4</dataType>
		</stateVariable>
		<stateVariable sendEvents="no">
			<name>A_ARG_TYPE_PlayState</name>
			<dataType>i4</dataType>
		</stateVariable>
		<stateVariable sendEvents="no">
			<name>A_ARG_TYPE_PartyId</name>
			<dataType>string</dataType>
		</stateVariable>
		<stateVariable sendEvents="no">
			<name>A_ARG_TYPE_ActionStatus</name>
			<dataType>i4</dataType>
		</stateVariable>
	</serviceStateTable>
</scpd>